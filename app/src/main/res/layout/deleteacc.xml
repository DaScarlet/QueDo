<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteAccount">

    <Button
        android:id="@+id/btndltacc"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:background="@color/lightred"
        android:text="Delete Acc"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btndltcancel"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btndltcancel"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:background="#009688"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="367dp"
        android:layout_height="179dp"
        android:layout_marginTop="44dp"
        android:gravity="center_horizontal"
        android:text="Are you sure you want to delete your account? If you delete your account, you will permanently lose your profile.    "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDeleteAcc" />

    <TextView
        android:id="@+id/txtDeleteAcc"
        android:layout_width="333dp"
        android:layout_height="42dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="DELETE ACCOUNT?    "
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>